<div class="container">
  <div class="row">
      <div class="col-lg-12">
        <h1>Welcome to get my car</h1>
        <hr>
      </div>
  </div>
<div class="row">
  <div class="col-lg-6">
    Send a message!
    <%= form_tag('/message', remote: true) do %>
      <div class="form-group">
        <%= text_field_tag 'message',nil, :class => 'form-control' %> <br>
      </div>
      <div class="form-group">
        <%= button_tag("Send", data: { disable_with: "Sending...", remote: true }, :class => 'btn btn-default') %>
      </div>
    <% end %>
  </div>
  <div class="col-lg-6">
    <%=  react_component('MessageBox', props = {url: '/messages', pollInterval: 3000})  %>
  </div>
</div>
